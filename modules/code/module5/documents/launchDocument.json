{
    "type": "APL",
    "version": "1.1",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "my-cakewalk-apl-package-v2",
            "version": "1.0",
            "source": "https://raw.githubusercontent.com/alexa/skill-sample-nodejs-first-apl-skill/master/modules/code/module5/documents/my-cakewalk-apl-package-v2.json"
        },
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [],
    "styles": {},
    "onMount": [
        {
            "commands": [
            {
                "componentId": "textTop",
                "duration": 2000,
                "easing": "ease-in-out",
                "type": "AnimateItem",
                "value": [
                  {
                    "property": "opacity",
                    "to": 1
                  },
                  {
                    "from": [
                      {
                        "translateX": 800
                      }
                    ],
                    "property": "transform",
                    "to": [
                      {
                        "translateX": 0
                      }
                    ]
                  }
                ]
              },
              {
                "componentId": "textMiddle",
                "duration": 2000,
                "easing": "ease-in-out",
                "type": "AnimateItem",
                "value": [
                  {
                    "property": "opacity",
                    "to": 1
                  },
                  {
                    "from": [
                      {
                        "translateX": -400
                      }
                    ],
                    "property": "transform",
                    "to": [
                      {
                        "translateX": 0
                      }
                    ]
                  }
                ]
              },
              {
                "componentId": "textBottom",
                "duration": 2000,
                "easing": "ease-in-out",
                "type": "AnimateItem",
                "value": [
                  {
                    "property": "opacity",
                    "to": 1
                  },
                  {
                    "from": [
                      {
                        "translateY": 1200
                      }
                    ],
                    "property": "transform",
                    "to": [
                      {
                        "translateX": 0
                      }
                    ]
                  }
                ]
              },
              {
                "componentId": "image",
                "duration": 2000,
                "easing": "path(0.25, 0.2, 0.5, 0.5, 0.75, 0.8)",
                "type": "AnimateItem",
                "value": [
                  {
                    "property": "opacity",
                    "to": 1
                  },
                  {
                    "from": [
                      {
                        "scale": 0.01
                      },
                      {
                        "rotate": 0
                      }
                    ],
                    "property": "transform",
                    "to": [
                      {
                        "scale": 1
                      },
                      {
                        "rotate": 360
                      }
                    ]
                  }
                ]
              }
            ],
            "type": "Parallel"
        }
    ],
    "graphics": {},
    "commands": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${payload.assets.backgroundURL}"
                    },
                    {
                        "type": "cakeWalkText",
                        "startText":"${payload.text.start}",
                        "middleText":"${payload.text.middle}",
                        "endText":"${payload.text.end}"
                    },
                    {
                        "type": "Container",
                        "alignItems": "center",
                        "items": [
                            {
                                "type": "AlexaImage",
                                "imageSource": "${payload.assets.cake}",
                                "imageRoundedCorner": false,
                                "imageScale": "best-fit",
                                "imageHeight": "50vh",
                                "imageAspectRatio": "standard_landscape",
                                "imageBlurredBackground": false,
                                "id": "image"
                            }
                        ]
                    }
                ],
                "height": "100%",
                "width": "100%",
                "when": "${@viewportProfile != @hubRoundSmall}"
            },
            {
                "type": "Container",
                "paddingTop": "75dp",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${payload.assets.backgroundURL}"
                    }, 
                    {
                        "type": "cakeWalkText",
                        "startText":"${payload.text.start}",
                        "middleText":"${payload.text.middle}",
                        "endText":"${payload.text.end}"
                    }
                ],
                "height": "100%",
                "width": "100%",
                "when": "${@viewportProfile == @hubRoundSmall}"
            }
        ]
    }
}