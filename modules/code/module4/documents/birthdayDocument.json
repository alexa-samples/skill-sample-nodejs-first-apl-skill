{
    "type": "APL",
    "version": "1.1",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "my-cakewalk-apl-package",
            "version": "1.0",
            "source": "https://public-pics-muoio.s3.amazonaws.com/my-cakewalk-apl-package.json"
        },
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [],
    "styles": {
        "bigText": {
            "values": [
                {
                    "fontSize": "72dp",
                    "color": "black",
                    "textAlign": "center"
                }
            ]
        }
    },
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container", 
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${payload.assets.backgroundURL}"
                    },
                    {
                        "type": "Container",
                        "paddingTop":"3vh",
                        "alignItems": "center",
                        "items": [{
                            "type": "Video",
                            "height": "85vh",
                            "width":"90vw",
                            "source": "${payload.assets.video}",
                            "autoplay": true
                        }]
                    }
                ],
                "height": "100%",
                "width": "100%",
                "when": "${@viewportProfile != @hubRoundSmall}"
            },
            {
                "type": "Container",
                "paddingTop": "75dp",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${payload.assets.backgroundURL}"
                    },
                    {
                        "type": "cakeWalkText",
                        "startText":"${payload.text.start}",
                        "middleText":"${payload.text.middle}",
                        "endText":"${payload.text.end}"
                    }
                ],
                "height": "100%",
                "width": "100%",
                "when": "${@viewportProfile == @hubRoundSmall}"
            }
        ]
    }
}